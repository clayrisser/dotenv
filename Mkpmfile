include $(MKPM)/mkpm
include $(MKPM)/gnu
include $(MKPM)/main

PACK_DIR := $(MKPM_TMP)/pack

.PHONY: info
info:
	@$(ECHO) DOTENV: $(DOTENV)
	@$(ECHO) DEFAULT_ENV: $(DEFAULT_ENV)
	@$(ECHO) HELLO: '$(HELLO)'
	@$(ECHO) HOWDY: '$(HOWDY)'
	@$(ECHO) FOO: '$(FOO)'

.PHONY: clean
clean:
	@$(MKCHAIN_CLEAN)
	@$(GIT) clean -fXd \
		$(MKPM_GIT_CLEAN_FLAGS)

.PHONY: purge
purge: clean
	@$(GIT) clean -fXd


